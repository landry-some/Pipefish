def

goRandomInt(i int) : gocode {
    return rand.Intn(i)
}

randomFunctionOf(random Random) :
    type r == int : 
        r <= 0 :
            error "range of Random object cannot be <= 0"
        else :
            goRandomInt(r)
    type r == list :
        r == [] :
            error "can't take random element of empty list"
        else :
            r[goRandomInt(len r)]
    else :
        error "can't randomize things of type " + string(type r)
given :
    r = random[params]

