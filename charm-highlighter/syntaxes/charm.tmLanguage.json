{	"name": "Charm",
	
	"patterns": [
		{
			"include": "#keywords"
		},
		{	
			"include": "#headwords"
		},
		{
			"include": "#strings"
		},
		{	
			"include": "#comments"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#continuations"
		},
		{	
			"include": "#logging"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.charm",
				"match": "\\b(else|given|loop|break|stop|given|eval|gocode|global|true|false|and|or|not|raw|ast|varname)\\b"
			}]
		},
		"headwords": {
                        "patterns": [{
                                "name": "constant.other.charm",
                                "match": "\\b(import|def|var|cmd|private|languages|contacts)\\b"
                        }]
                },
		"strings": {
			"patterns": [
				{
				"name":"string.quoted.single.charm",
				"begin": "`",
				"end": "`"
				},
				{
				"name":"string.quoted.double.charm",
				"match": "\"[^\"\\\\]*(\\\\.[^\"\\\\]*)*\""
				}
			]
		},
		"comments": {
			"patterns": [				
				{
				"name": "comment.charm",
				"begin": "//",
				"end": "\n"
				}
			]
		},
		"logging": {
                        "patterns": [
                                {
                                "name": "variable.other.charm",
                                "match": "\\\\\\\\([^\\/]|\/[^\\/])*"
                                }
                        ]
                },
		"punctuation": {
			"patterns": [
				{
				"name": "keyword.charm",
				"match": "(==|!=|->|\\?>|\\>>|:|::|->|;|---)"
				}
			]
		},
		"continuations": {
                        "patterns": [
                                {
                                "name": "constant.other.charm",
                                "match": "(,)\\s*$|(\\.\\.)\\s*$|^\\s*(\\.\\.)"
                                }
                        ]
                } 
	},
	"scopeName": "source.charm"
}
